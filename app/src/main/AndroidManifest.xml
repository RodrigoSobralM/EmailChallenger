<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.email">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Email">

        <!-- LoginActivity (Inicialização) -->
        <activity android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity android:name=".ui.MainActivity"
            android:exported="true" />

        <!-- RegisterActivity -->
        <activity android:name=".ui.RegisterActivity"
            android:exported="true" />

        <!-- ForgotPasswordActivity -->
        <activity android:name=".ui.ForgotPasswordActivity"
            android:exported="true" />

        <!-- ComposeEmailActivity -->
        <activity android:name=".ui.ComposeEmailActivity"
            android:exported="true" />

        <!-- EmailDetailActivity -->
        <activity android:name=".ui.EmailDetailActivity"
            android:exported="true" />

    </application>

</manifest>
